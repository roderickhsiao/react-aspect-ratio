{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "noImplicitAny": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "ESNext",
    "types": ["@testing-library/jest-dom"]
  },
  "include": [
    "src/**/*"
  ],
}